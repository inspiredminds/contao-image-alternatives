{
    "name": "inspiredminds/contao-image-alternatives",
    "description": "Contao extension to provide the possibility of defining alternative images to be used on different output devices.",
    "type": "contao-bundle",
    "license": "LGPL-3.0-or-later",
    "homepage": "https://github.com/inspiredminds/contao-image-alternatives",
    "authors": [
        {
            "name": "Fritz Michael Gschwantner",
            "email": "fmg@inspiredminds.at",
            "role": "Developer"
        }
    ],
	"support": {
		"issues": "https://github.com/inspiredminds/contao-image-alternatives/issues",
		"source": "https://github.com/inspiredminds/contao-image-alternatives",
		"forum": "https://community.contao.org/de"
	},
	"funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/fritzmg"
        }
    ],
    "require": {
        "php": ">=8.2",
        "contao/core-bundle": "^5.3",
        "symfony/config": "^6.4 || ^7.3",
        "symfony/dependency-injection": "^6.4 || ^7.3",
        "symfony/http-foundation": "^6.4 || ^7.3",
        "symfony/http-kernel": "^6.4 || ^7.3",
        "symfony/translation": "^6.4 || ^7.3"
    },
    "autoload": {
        "psr-4": {
            "InspiredMinds\\ContaoImageAlternatives\\": "src/"
        }
    },
    "extra": {
        "contao-manager-plugin": "InspiredMinds\\ContaoImageAlternatives\\ContaoManager\\Plugin"
    },
    "require-dev": {
        "contao/easy-coding-standard": "^6.0",
        "contao/rector": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "contao/manager-plugin": true,
            "php-http/discovery": false,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
